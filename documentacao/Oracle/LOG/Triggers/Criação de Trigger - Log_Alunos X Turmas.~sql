/* DOCUMENTAÇÃO DE TRIGGER DO PROJETO */
/*     Trigger de Alunos X Turmas     */
CREATE OR REPLACE TRIGGER port_catraca.TRG_LOG_ALUNOS
BEFORE UPDATE OR INSERT OR DELETE
ON port_catraca.ALUNOS
REFERENCING NEW AS NEW OLD AS OLD
  FOR EACH ROW
BEGIN
   IF Inserting THEN

     --INSERT
     INSERT INTO port_catraca.LOG_ALUNOS_TURMAS
     SELECT SEQ_LOG_ALUNOS_TURMA.NEXTVAL,
     --DADOS ALTERADOS
     :new.CD_ALUNO,
     :new.CD_TURMA,
     :new.NM_ALUNO,
     :new.RG,
     :new.CD_CRACHA,
     :new.SN_ATIVO,
     --CAMPOS PADRAO
     :new.CD_USUARIO_CADASTRO,
     :new.HR_CADASTRO,
     :new.CD_USUARIO_ULT_ALT,
     :new.HR_ULT_ALT,
     --INFORMACOES LOG
     'I' AS TP_ALTERACAO, NULL TP_UPDATE, SYSTIMESTAMP AS HR_LOG, USER AS CD_USUARIO_DB_LOG
     FROM DUAL;
     
   ELSIF Updating THEN
     
     --UPDATE (ANTES)
     INSERT INTO port_catraca.LOG_ALUNOS_TURMAS
     SELECT SEQ_LOG_ALUNOS_TURMA.NEXTVAL,
     --DADOS ALTERADOS
     :old.CD_ALUNO,
     :old.CD_TURMA,
     :old.NM_ALUNO,
     :old.RG,
     :old.CD_CRACHA,
     :old.SN_ATIVO,
     --CAMPOS PADRAO
     :old.CD_USUARIO_CADASTRO,
     :old.HR_CADASTRO,
     :old.CD_USUARIO_ULT_ALT,
     :old.HR_ULT_ALT,
     --INFORMACOES LOG
     'U' AS TP_ALTERACAO, 'A' TP_UPDATE, SYSTIMESTAMP AS HR_LOG, USER AS CD_USUARIO_DB_LOG
     FROM DUAL;

     --UPDATE (DEPOIS)
     INSERT INTO port_catraca.LOG_ALUNOS_TURMAS
     SELECT SEQ_LOG_ALUNOS_TURMA.NEXTVAL,
     --DADOS ALTERADOS
     :new.CD_ALUNO,
     :new.CD_TURMA,
     :new.NM_ALUNO,
     :new.RG,
     :new.CD_CRACHA,
     :new.SN_ATIVO,
     --CAMPOS PADRAO
     :new.CD_USUARIO_CADASTRO,
     :new.HR_CADASTRO,
     :new.CD_USUARIO_ULT_ALT,
     :new.HR_ULT_ALT,
     --INFORMACOES LOG
     'U' AS TP_ALTERACAO, 'D' TP_UPDATE, SYSTIMESTAMP AS HR_LOG, USER AS CD_USUARIO_DB_LOG
     FROM DUAL;
     
   ELSIF Deleting THEN
     --DELETE
     INSERT INTO port_catraca.LOG_ALUNOS_TURMAS
     SELECT SEQ_LOG_ALUNOS_TURMA.NEXTVAL,
     --DADOS ALTERADOS
     :old.CD_ALUNO,
     :old.CD_TURMA,
     :old.NM_ALUNO,
     :old.RG,
     :old.CD_CRACHA,
     :old.SN_ATIVO,
     --CAMPOS PADRAO
     :old.CD_USUARIO_CADASTRO,
     :old.HR_CADASTRO,
     :old.CD_USUARIO_ULT_ALT,
     :old.HR_ULT_ALT,
     --INFORMACOES LOG
     'D' AS TP_ALTERACAO, NULL TP_UPDATE, SYSTIMESTAMP AS HR_LOG, USER AS CD_USUARIO_DB_LOG
     FROM DUAL;
   END IF;
END;
