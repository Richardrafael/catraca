/* DOCUMENTAÇÃO DE TRIGGER DO PROJETO */
/*  Trigger de Crachas X Catracas */
CREATE OR REPLACE TRIGGER port_catraca.TRG_LOG_CRACHAS
BEFORE UPDATE OR INSERT OR DELETE
ON port_catraca.CRACHAS
REFERENCING NEW AS NEW OLD AS OLD
  FOR EACH ROW
BEGIN
   IF Inserting THEN
     
     --INSERT
     INSERT INTO port_catraca.LOG_CRACHAS
     SELECT SEQ_LOG_CRACHA.NEXTVAL,
     --DADOS ALTERADOS
     :new.CD_REGISTRO,
     :new.CD_CRACHA,
     :new.TIPO,
     :new.CD_CATRACA,
     --CAMPOS PADRAO
     :new.CD_USUARIO_CADASTRO,
     :new.HR_CADASTRO,
     --INFORMACOES LOG
     'I' AS TP_ALTERACAO, NULL TP_UPDATE, SYSTIMESTAMP AS HR_LOG, USER AS CD_USUARIO_DB_LOG
     FROM DUAL;
     
   ELSIF Updating THEN
     
     --UPDATE (ANTES)
     INSERT INTO port_catraca.LOG_CRACHAS
     SELECT SEQ_LOG_CRACHA.NEXTVAL,
     --DADOS ALTERADOS
     :old.CD_REGISTRO,
     :old.CD_CRACHA,
     :old.TIPO,
     :old.CD_CATRACA,
     --CAMPOS PADRAO
     :old.CD_USUARIO_CADASTRO,
     :old.HR_CADASTRO,
     --INFORMACOES LOG
     'U' AS TP_ALTERACAO, 'A' TP_UPDATE, SYSTIMESTAMP AS HR_LOG, USER AS CD_USUARIO_DB_LOG
     FROM DUAL;

     --UPDATE (DEPOIS)
     INSERT INTO port_catraca.LOG_CRACHAS
     SELECT SEQ_LOG_CRACHA.NEXTVAL,
     --DADOS ALTERADOS
     :new.CD_REGISTRO,
     :new.CD_CRACHA,
     :new.TIPO,
     :new.CD_CATRACA,
     --CAMPOS PADRAO
     :new.CD_USUARIO_CADASTRO,
     :new.HR_CADASTRO,
     --INFORMACOES LOG
     'U' AS TP_ALTERACAO, 'D' TP_UPDATE, SYSTIMESTAMP AS HR_LOG, USER AS CD_USUARIO_DB_LOG
     FROM DUAL;
     
   ELSIF Deleting THEN
     --DELETE
     INSERT INTO port_catraca.LOG_CRACHAS
     SELECT SEQ_LOG_CRACHA.NEXTVAL,
     --DADOS ALTERADOS
     :old.CD_REGISTRO,
     :old.CD_CRACHA,
     :old.TIPO,
     :old.CD_CATRACA,
     --CAMPOS PADRAO
     :old.CD_USUARIO_CADASTRO,
     :old.HR_CADASTRO,
     --INFORMACOES LOG
     'D' AS TP_ALTERACAO, NULL TP_UPDATE, SYSTIMESTAMP AS HR_LOG, USER AS CD_USUARIO_DB_LOG
     FROM DUAL;
   END IF;
END;
