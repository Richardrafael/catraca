/* DOCUMENTAÇÃO DE TABELAS DO PROJETO */
/*  Tabela de Catracas */

DROP port_catraca.CATRACA;

CREATE TABLE port_catraca.CATRACA(
  CD_CATRACA                  INTEGER NOT NULL,
  NM_CATRACA                  NVARCHAR2(50) NOT NULL,
  DS_CATRACA                  NVARCHAR2(100) NOT NULL,
  IP_CATRACA                  NVARCHAR2(20) NOT NULL,
  SN_ATIVO                    NVARCHAR2(1) NOT NULL,
  CD_USUARIO_CADASTRO         VARCHAR2(12) NOT NULL,
  HR_CADASTRO                 TIMESTAMP NOT NULL,
  CD_USUARIO_ULT_ALT          VARCHAR2(12),
  HR_ULT_ALT	                TIMESTAMP,
  
  CONSTRAINT PK_CD_CATRACA PRIMARY KEY (CD_CATRACA)
);


--SEQUENCE
DROP SEQUENCE port_catraca.SEQ_CD_CATRACA;

CREATE SEQUENCE port_catraca.SEQ_CD_CATRACA  
START WITH 6    
INCREMENT BY 1
NOCACHE
NOCYCLE;

--SELECT
SELECT rowid, cat.* FROM port_catraca.CATRACA cat ORDER BY cat.CD_CATRACA

