/*DOCUMENTAÇÃO DE TABELAS DO PROJETO*/
/*  Tabela de Prestadores  */

--DROPANDO TABELA
DROP TABLE port_catraca.PRESTADORES;

--CRIANDO TABELA
CREATE TABLE port_catraca.PRESTADORES(
CD_SEQ_PRESTADOR INT NOT NULL,
CRACHA         VARCHAR(12),
NM_PRESTADOR   VARCHAR(80) NOT NULL,
CPF            VARCHAR(11) NOT NULL,
TIPO           VARCHAR(2),
TP_STATUS      VARCHAR(1),
DT_INICIO      DATE NOT NULL,
DT_FIM         DATE NOT NULL,
CD_USUARIO_CADASTRO VARCHAR(20),
HR_CADASTRO    TIMESTAMP(6),
CD_USUARIO_ULT_ALT VARCHAR(20),
HR_ULT_ALT     TIMESTAMP(6),

--PK
CONSTRAINT PK_CD_PRESTADOR PRIMARY KEY (CD_SEQ_PRESTADOR)
);

--SEQUENCE
DROP SEQUENCE port_catraca.SEQ_CD_PRESTADOR;
CREATE SEQUENCE port_catraca.SEQ_CD_PRESTADOR  
START WITH 1    
INCREMENT BY 1
NOCACHE
NOCYCLE;
